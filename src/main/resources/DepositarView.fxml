<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-background-color: #525252;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.proyectofinalbancouq.controllers.DepositoController">
    <Label text="Ingrese la cantidad a depositar" textFill="WHITE"/>
    <TextField fx:id="campoCantidadDeposito" promptText="Cantidad a depositar"/>
    <Label fx:id="etiquetaMensaje" textFill="RED"/> <!-- Mensaje de error o confirmación -->
    <Button text="Confirmar Depósito" onAction="#confirmarDeposito"/>
    <Button text="Cancelar" onAction="#cancelarDeposito"/>
</VBox>
