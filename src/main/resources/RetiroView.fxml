<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="270.0" prefWidth="292.0" spacing="10" style="-fx-background-color: #525252;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.proyectofinalbancouq.controllers.RetiroController">
    <Label prefHeight="57.0" prefWidth="248.0" text="Ingrese la cantidad a retirar" textFill="WHITE">
      <font>
         <Font name="Impact" size="21.0" />
      </font></Label>
    <TextField fx:id="campoCantidadRetiro" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="36.0" prefWidth="254.0" promptText="Cantidad a retirar">
      <VBox.margin>
         <Insets />
      </VBox.margin></TextField>
    <Label fx:id="etiquetaMensaje" textFill="RED" /> <!-- Mensaje de error o confirmaciÃ³n -->
    <Button fx:id="confirmarRetiroButton" text="Confirmar Retiro" onAction="#confirmarRetiro"/>
    <Button onAction="#cancelarRetiro" prefHeight="25.0" prefWidth="104.0" text="Cancelar" />
</VBox>
