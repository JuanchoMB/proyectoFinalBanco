<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="527.0" prefWidth="450.0" spacing="15" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.proyectofinalbancouq.controllers.RegistroController">

    <!-- Título Registro de Usuario -->
    <Label prefHeight="99.0" prefWidth="222.0" text="Registro de Usuario" textFill="#aeaeae">
        <font>
            <Font name="Impact" size="27.0" />
        </font>
    </Label>


    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label alignment="TOP_CENTER" prefHeight="17.0" prefWidth="122.0" text="Nombre Completo:" textFill="WHITE" />
        <TextField fx:id="nombreField" prefHeight="25.0" prefWidth="231.0" promptText="Nombre Completo" />
    </HBox>


    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label alignment="TOP_CENTER" prefHeight="17.0" prefWidth="123.0" text="ID:" textFill="WHITE" />
        <TextField fx:id="idField" prefHeight="25.0" prefWidth="231.0" promptText="ID" />
    </HBox>


    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label alignment="TOP_CENTER" prefHeight="17.0" prefWidth="123.0" text="Correo Electrónico:" textFill="WHITE" />
        <TextField fx:id="correoField" prefHeight="25.0" prefWidth="231.0" promptText="Correo Electrónico" />
    </HBox>


    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label alignment="TOP_CENTER" prefHeight="17.0" prefWidth="123.0" text="Dirección:" textFill="WHITE" />
        <TextField fx:id="direccionField" prefHeight="25.0" prefWidth="230.0" promptText="Dirección" />
    </HBox>


    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label alignment="TOP_CENTER" prefHeight="17.0" prefWidth="122.0" text="Teléfono:" textFill="WHITE" />
        <TextField fx:id="telefonoField" prefHeight="25.0" prefWidth="231.0" promptText="Teléfono" />
    </HBox>


    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label alignment="TOP_CENTER" prefHeight="17.0" prefWidth="121.0" text="Contraseña:" textFill="WHITE" />
        <TextField fx:id="contrasenaField" prefHeight="25.0" prefWidth="233.0" promptText="Contraseña" />
    </HBox>


    <Button onAction="#registrarUsuario" opacity="0.75" prefHeight="25.0" prefWidth="131.0" text="Registrar" />

    <Button onAction="#volverALogin" opacity="0.85" text="Volver a Iniciar Sesión" />


    <Label fx:id="etiquetaMensaje" alignment="TOP_CENTER" prefHeight="64.0" prefWidth="268.0" text="" textFill="#42a150">
      <font>
         <Font name="System Bold Italic" size="10.0" />
      </font></Label>

</VBox>
