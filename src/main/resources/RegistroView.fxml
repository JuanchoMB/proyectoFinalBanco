<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="478.0" prefWidth="378.0" spacing="10" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.proyectofinalbancouq.controllers.RegistroController">
    <Label prefHeight="99.0" prefWidth="222.0" text="Registro de Usuario" textFill="#aeaeae">
      <font>
         <Font name="Impact" size="27.0" />
      </font></Label>

    <TextField fx:id="nombreField" promptText="Nombre Completo">
      <VBox.margin>
         <Insets left="15.0" right="15.0" />
      </VBox.margin></TextField>
    <TextField fx:id="idField" promptText="ID">
      <VBox.margin>
         <Insets left="15.0" right="15.0" />
      </VBox.margin></TextField>
    <TextField fx:id="correoField" promptText="Correo Electrónico">
      <VBox.margin>
         <Insets left="15.0" right="15.0" />
      </VBox.margin></TextField>
    <TextField fx:id="direccionField" promptText="Dirección">
      <VBox.margin>
         <Insets left="15.0" right="15.0" />
      </VBox.margin></TextField>
    <TextField fx:id="telefonoField" promptText="Teléfono">
      <VBox.margin>
         <Insets left="15.0" right="15.0" />
      </VBox.margin></TextField>
    <PasswordField fx:id="contrasenaField" promptText="Contraseña">
      <VBox.margin>
         <Insets left="15.0" right="15.0" />
      </VBox.margin></PasswordField>

    <Button onAction="#registrarUsuario" opacity="0.75" prefHeight="25.0" prefWidth="131.0" text="Registrar" />
    <Button onAction="#volverALogin" opacity="0.85" text="Volver a Iniciar Sesión" />
    <Label fx:id="etiquetaMensaje" text="" />
</VBox>
